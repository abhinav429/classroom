# Database (e.g. Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Frontend origin (for CORS and Better Auth). Use production URL when deployed.
FRONTEND_URL=http://localhost:5173

# Better Auth: generate a long random string (e.g. openssl rand -base64 32)
BETTER_AUTH_SECRET=your-secret-here

# Optional: Arcjet (rate limiting / security)
# ARCJET_KEY=
# ARCJET_ENV=development
